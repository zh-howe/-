/* pages/my/my.wxss */
page{
	background:#f5f5f5;
}
.my{
	padding:0;
	margin:0;
	background:#fff;
	margin-bottom: 30px;
}
.my-header{
	height:205rpx;
	width:670rpx;
	padding:65rpx 40rpx 0;
	position: relative;
	display: flex;
	justify-content: space-between;
}
.my-header>image{
	position: absolute;
	left:0;
	top:0;
	width:100%;
	height:100%;
	z-index: 1;
}
.header-left{
	width:100%;
	height:130rpx;
	line-height: 130rpx;
	position: relative;
	z-index: 10;
	display: flex;
}
.header-left view:nth-child(1),.header-left image{
	border-radius: 50%;
	width:130rpx;
	height:130rpx;
	border:solid 1px #fff;
	margin-right:10px;
	overflow: hidden;
}
.header-left view:nth-child(2),.header-left text{
	font-size: 16px;
	color:#777;
}
.header-left button{
	font-size: 16px;
	color:#777;
	background:none;
	margin:0;
	padding:0;
	line-height: 130rpx;
}
.header-left button::after{
	border:0;
}
.header-right{
	height:130rpx;
	position: relative;
	z-index: 10;
}
.header-right image{
	width:40rpx;
	height: 40rpx;
	margin-top:45rpx;
}
.bgColor{
	background:#f5f5f5;
	width:100%;
	height:20rpx;
}
.order{
	display: flex;
	justify-content: space-between;
	padding:0 20rpx;
	height:40px;
	line-height: 40px;
	border-bottom: solid 1px #eee;
}
.order>text{
	font-size: 15px;
	color:#333;
}
.full-order text{
	font-size: 12px;
	color:#999;
}
.order image{
	width:12px;
	height:12px;
	margin-bottom: 13px;
	margin-left:3px;
}
.logistics{
	display: flex;
	padding:15px 0;
}
.logistics view{
	width:20%;
	display: flex;
	flex-direction: column;
	text-align: center;
}
.logistics text{
	font-size: 12px;
	color:#777;
}
.logistics image{
	width:24px;
	height: 24px;
	margin:0 auto;
}
.my-list-item,.my-list-item navigator{
	display: flex;
	justify-content: space-between;
	border-top: solid 1px #eee;
	padding:0 20rpx;
	width:710rpx;
	height:40px;
	line-height: 40px;
}
.my-list-item navigator{
	padding:0;
}
.my-list-item:nth-child(1){
	border:0;
}
.my-list-item view image{
	width:20px;
	height:20px;
	margin-bottom: 10px;
	margin-right:5px;
}
.my-list-item view text{
	font-size: 13px;
	color:#999;
}
.my-list-item>image,.my-list-item navigator>image{
	width:12px;
	height:12px;
	margin-top: 14px;
}
.shouquan image{
	margin-top: 10px;
}
.shouquan>view{
	display: flex;
	width:100%;
}
.shouquan button{
	width:90%;
	font-size: 13px;
	text-align: left;
	line-height: 40px;
	color:#999;
	background:#fff;
	margin:0;
	padding:0;
}
.shouquan button::after{
	border:0;
}
.index-bottom{
	background:#f5f5f5;
	display: flex;
	flex-direction: column;
	text-align: center;
	padding:10px 0;
	position: relative;
}
.footer-border{
	height:1rpx;
	width:90%;
	margin:10px auto;
	background:#ddd;
}
.index-bottom image{
	width:91px;
	height:13px;
	margin:5px auto;
	margin-top:10px;
}
.index-bottom text{
	font-size: 12px;
	color:#999;
}
.index-bottom-text{
	background:#f5f5f5;
	padding:0 3px;
	display: inline-block;
	width:60px;
	text-align: center;
	position: absolute;
	top:12px;
	left:50%;
	margin-left:-30px;
}