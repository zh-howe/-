/* pages/modify/modify.wxss */
.modify-ban>view{
	height:60px;
	line-height: 60px;
	display: flex;
	justify-content: space-between;
	padding:0 20rpx;
	background:#f5f5f5;
}
.modify-ban text{
	font-size: 14px;
	color:#777;
}
.modify-ban-top{
	border-bottom:solid 1px #eee;
}
.modify-ban-top view{
	width:40px;
	height:40px;
	border-radius: 50%;
	border:solid 1px #eee;
	margin-top:10px;
	overflow: hidden;
}
.modify-ban-bottom view{
	color:#333;
}
.modify-allow>view{
	display: flex;
	justify-content: space-between;
	border-bottom:solid 1px #eee;
	padding:0 20rpx;
	height:60px;
	line-height: 60px;
}
.modify-allow-left text{
	color:#555;
	font-size: 14px;
}
.modify-allow-right button{
	font-size: 12px;
	color:#666;
	height:40px;
	line-height: 40px;
	margin-top: 10px;
	background-color:#fff;
	padding:0;
}
.modify-allow-right button:after{
	border:0;
}
.modify-allow-right text{
	font-size: 12px;
	color:#666;
}
.modify-allow-right input{
	font-size: 12px;
	color:#666;
	width:64px;
	height:40px;
	line-height: 40px;
	margin-top: 10px;
	text-align: right;
}
.birthday{
	position: fixed;
	bottom:0;
	left:0;
	z-index: 999;
	width:100%;
	height:250px;
	text-align: center;
	background: #fff;
}
.birthday-decision{
	display: flex;
	justify-content: space-between;
	padding:0 20rpx;
	height:50px;
	line-height: 50px;
	margin-bottom:20px;
}
.birthday-decision text{
	font-size: 15px;
}
.birthday-decision text:nth-child(2){
	color:#00B26A;
}
.birthday2{
	background:rgba(0,0,0,.7);
	position: fixed;
	top:0;
	left: 0;
	width:100%;
	height:100%;
	z-index: 900;
}
.conserve{
	position: fixed;
	bottom:0;
	left:0;
	width:100%;
	height:50px;
	line-height: 50px;
	background:#D63C34;
	color:#fff;
	text-align: center;
}