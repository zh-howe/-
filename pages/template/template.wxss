/* 隔栏 */
.bgColor{
	background:#f5f5f5;
	width:100%;
	height:20rpx;
}
/* 隔栏 end */

/* 头部搜索 */
.search{
  width:100%;
  height:100rpx;
  background:#f5f5f5;
}
.search-input{
  width:650rpx;
  height:64rpx;
  display: flex;
  background:#fff;
  margin:18rpx auto;
  border-radius: 60rpx;
}
.search-input image{
  width:48rpx;
  height:48rpx;
  margin:11rpx;
}
.search-input input{
  height:64rpx;
  width:500rpx;
  font-size: 14px;
  color:#333;
}
/* 头部搜索 end */

/* 商品栏 竖 */
.shopCase{
	width:330rpx;
	position: relative;
	padding:10px 0;
}
.shopCase image{
	width:330rpx;
	height:330rpx;
}
.shopCase-title{
	font-size: 14px;
	display: inline-block;
	width: 100%;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
	padding-top:10rpx;
}
.shopCase-bottom{
	display: flex;
	justify-content: space-between;
}
.shopCase-price{
	font-size: 14px;
	color:#fd4122;
}
.shopCase-bottom image{
	width:36rpx;
	height:36rpx;
}
.vipshop{
	position: absolute;
	left:0;
	top:20rpx;
	background:#D63C34;
	padding:0 10rpx;
	height:15px;
	line-height: 10px;
}
.vipshop text{
	font-size: 10px;
	color:#fff;
}
/* 商品栏 竖 end */

/* 商品栏 横 */
.shopCaseSecond{
	display: flex;
	flex-direction: row;
	padding:14rpx 20rpx;
	border-bottom:solid 1px #f5f5f5;
	position: relative;
}
.shopCaseSecond .vipshop{
	left:20rpx;
}
.shopCaseSecond:last-child{
	border-bottom:0;
}
.shopCaseSecond image{
	width:170rpx;
	height:170rpx;
}
.shopCaseSecond-right{
	width:540rpx;
	padding-left:20rpx;
	position: relative;
}
.shopCaseSecond-title{
	font-size: 14px;
	display: inline-block;
	width:100%;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.shopCaseSecond-label text{
	color:#D63C34;
	border:solid 1px #D63C34;
	font-size: 11px;
	padding:0 4rpx;
	margin-right:10rpx;
}
.shopCaseSecond-bottom{
	display: flex;
	justify-content: space-between;
	width:520rpx;
	position: absolute;
	bottom:0;
	left:0;
	padding:0 20rpx;
}
.shopCaseSecond-price{
	font-size: 14px;
	color:#fd4122;
}
.shopCaseSecond-bottom image{
	width:36rpx;
	height:36rpx;
}
/* 商品栏 横 end */

/* 收藏到购物车 */
.shopCart-modal{
	position: fixed;
	top:0;
	left:0;
	width:100%;
	height:100%;
	z-index: 9000;
	background:rgba(0,0,0,.6);
}
.shopCart{
	position: fixed;
	/* bottom:0; */
	bottom:-221px;
	left:0;
	background:#fff;
	width:100%;
	z-index: 9500;
}
.shopCart-describe{
	padding:90px 10px 0;
}
.shopCart-describe-title{
	display: flex;
	position: absolute;
	top:-15px;
	left:10px;
	width:700rpx;
}
.shopCart-describe-title image{
	width:90px;
	height:90px;
	box-shadow: 1px 2px 5px #999;
}
.shopCart-describe-details{
	display: flex;
	flex-direction: column;
	margin-left:15px;
}
.shopCart-name{
	font-size:15px;
	color:#555;
	padding-top:20px;
	display: inline-block;
	width:500rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.shopCart-price{
	font-size: 15px;
	color:#D63C34;
	margin-top:10px;
}
.shopCart-stock{
	font-size: 13px;
	color:#999;
}
.shopCart-describe-num{
	display: flex;
	justify-content: space-between;
	height:25px;
	line-height: 25px;
	padding:20px 0;
	border-top:solid 1px #eee;
}
.shopCart-describe-number{
	font-size: 14px;
	color:#666;
}
.shopCart-collect{
	display: flex;
	justify-content: space-between;
	height:50px;
	line-height: 50px;
}
.totalPrice{
	width: 40%;
	background:#f3eddb;
	text-align: center;
	font-size: 15px;
	color:#d1a341;
}
.add-to-cart{
	width:60%;
	text-align: center;
	background:#ee6732;
	color:#fff;
	font-size: 14px;
}
/* 收藏到购物车 end */
/* 商品数量加减 */
.wares-num{
	width:94px;
	text-align: center;
	display: flex;
	height:27px;
	border:solid 1px #eee;
	border-radius: 3px;
	overflow: hidden;
}
.wares-num text{
	display: inline-block;
	width:25px;
	height:27px;
	text-align: center;
	line-height: 25px;
	font-size: 20px;
	color:#333;
	background:#eee;
}
.wares-num input{
	border:solid 1px #ddd;
	border-top:0;
	border-bottom:0;
	width:50px;
	height:27px;
	font-size: 13px;
	color:#666;
	background:#eee;
}
/* 商品数量加减 */