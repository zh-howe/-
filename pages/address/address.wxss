/* pages/address/address.wxss */
.address{
	width:710rpx;
	padding:20rpx;
	position: relative;
	background-size:100% auto;
}
.address-title{
	display: flex;
}
.address-title text{
	font-size: 16px;
	color:#444;
	margin-right:30rpx;
}
.address-cont{
	font-size: 15px;
	color:#666;
	padding:10px 0;
}
.address .address-img1{
	position: absolute;
	right:0;
	top:0;
	width:36px;
	height:18px;
	line-height: 18px;
	font-size: 10px;
	color:#fff;
	background:#FD4122;
	text-align: center;
}
.address .address-img2{
	position: absolute;
	top:0;
	left:50%;
	margin-left:-72px;
	height:70px;
	width:144px;
	z-index: 0;
}
.address-state{
	display: flex;
	justify-content: space-between;
	padding:10px 0;
	border-bottom:solid 1px #ddd;
	border-top:dashed 1px #ddd;
}
.address-state text{
	color:#888;
	font-size: 12px;
}
.address-state image{
	width:16px;
	height:16px;
	margin-right:3px;
}
.address-modify image{
	margin-right:6px;
}
.address-xz{
	position: fixed;
	right:20rpx;
	bottom:100rpx;
}
.address-xz image{
	width:80rpx;
	height:80rpx;
}
.address-zanwu{
	width:400rpx;
	height:400rpx;
	margin: 50px auto;
}
.address-zanwu image{
	width:100%;
	height:100%;
}