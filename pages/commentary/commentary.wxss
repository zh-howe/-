/* pages/commentary/commentary.wxss */
.other-comment{
	padding:20rpx;
	border-bottom:solid 1px #eee;
}
.other-comment-title{
	width:100%;
	height:40px;
	line-height: 40px;
	display: flex;
	justify-content: space-between;
}
.other-comment-title image{
	width:40px;
	height:40px;
	border-radius: 50%;
	border:solid 1px #ccc;
	margin-right:5px;
}
.other-comment-title text{
	font-size: 13px;
	color:#333;
}
.other-comment-content{
	padding-top:10px;
	font-size: 14px;
	color:#666;
}
.other-comment-title .other-comment-img image{
	width:17px;
	height:16px;
	margin:12px 2px;
	border:0;
}