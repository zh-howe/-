/* pages/address2/address2.wxss */
.address2-page{
	background:#f5f5f5;
	display: flex;
	flex-direction: column;
}
.address-form{
	background:#fff;
	display: flex;
	justify-content: space-between;
	border-bottom:solid 1px #eee;
	padding:0 20rpx;
	height:40px;
	line-height: 40px;
}
.address-form text{
	font-size: 14px;
}
.address-form input{
	height:40px;
	line-height: 40px;
	font-size: 14px;
	color:#666;
	width:500rpx;
}
.address-default{
	margin-top:10px;
	border:0;
}
.address2-page button{
	font-size: 14px;
	color:#fff;
	background: #FD4122;
	width:710rpx;
	margin:30px 20rpx;
}