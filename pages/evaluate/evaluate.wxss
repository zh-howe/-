/* pages/evaluate/evaluate.wxss */
.state-cont{
	display: flex;
	height:160rpx;
	padding:20rpx;
	background:#fff;
}
.state-cont-img{
	width:160rpx;
	height:160rpx;
}
.state-cont-img image{
	width:100%;
	height:100%;
}
.state-cont-title{
	width:380rpx;
	padding:0 10rpx;
}
.state-cont-title text{
	font-size: 14px;
	color:#666;
	display: inline-block;
	height: 61px;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 3;
	overflow: hidden;
}
.state-cont-price{
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	text-align: right;
	width:140rpx;
}
.state-cont-price text:nth-child(2){
	color:#666;
}
.evaluate-text{
	background:#fff;
	border-top: solid 1px #eee;
}
.evaluate-img{
	display: flex;
	border-bottom: solid 1px #eee;
	height:40px;
	line-height: 40px;
	padding-bottom: 20rpx;
}
.evaluate-img text{
	padding: 0 20rpx;
	font-size: 15px;
	color:#333;
}
.evaluate-img .evaluate-img-txt{
	font-size: 13px;
	padding-left:20rpx;
	color:#666;
}
.evaluate-img view{
	height:16px;
	margin-top:12px;
	display: flex;
}
.evaluate-img image{
	width:17px;
	height:16px;
	margin-left:5px;
}
.evaluate-form{
	padding:20rpx;
	padding-top:0;
}
.evaluate-form textarea,.evaluate-form text{
	display: inline-block;
	font-size: 14px;
	color:#333;
	background:#f5f5f5;
	width:670rpx;
	height:80px;
	padding:5px 20rpx;
}
.evaluate-page button{
	margin-top:20px;
	width:260rpx;
	height:40px;
	line-height: 40px;
	background:#105da0;
	font-size: 14px;
	color:#fff;
}
.evaluate-text-title{
	padding:0 20rpx;
	font-size: 15px;
	color:#333;
	height:80rpx;
	line-height: 80rpx;
	background:#fff;
}